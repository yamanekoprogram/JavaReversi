// 盤面情報を管理するクラス

package MainPackage;

import static MainPackage.Constants.*;

public class Board {
	private int[][] board = new int[8][8];
	
	// 盤面の初期化
	public Board() {
		for (int i=0; i<BOARD_LENGTH; i++) {
			for (int j=0; j<BOARD_LENGTH; j++) {
				board[i][j] = BLANK;
			}
		}
		board[3][3] = BLACK;
		board[4][4] = BLACK;
		board[3][4] = WHITE;
		board[4][3] = WHITE;
	}
	
	public void setCell(int x, int y, int status) {
		board[x][y] = status;
	}
	public int getCell(int x, int y) {
		return board[x][y];
	}
	
	// 駒の数え上げメソッド
	public int countCell(int color) {
		int cell;
		int count = 0;
		
		if (color == PLAYER) {
			cell = WHITE;
		} else {
			cell = BLACK;
		}
		
		for (int i=0; i<BOARD_LENGTH; i++) {
			for (int j=0; j<BOARD_LENGTH; j++) {
				if (this.getCell(i, j) == cell) count++;
			}
		}
		return count;
	}
}
