// 盤面情報を管理するクラス

package MainPackage;

import static MainPackage.Constants.*;

public class Board {
	private int[][] board = new int[8][8];
	
	// 盤面の初期化
	public Board() {
		for (int i=0; i<BOARD_LENGTH; i++) {
			for (int j=0; j<BOARD_LENGTH; j++) {
				board[i][j] = BLANK;
			}
		}
		board[3][3] = BLACK;
		board[4][4] = BLACK;
		board[3][4] = WHITE;
		board[4][3] = WHITE;
	}
	
	public void setCell(int x, int y, int status) {
		board[x][y] = status;
	}
	public int getCell(int x, int y) {
		return board[x][y];
	}
	
	// 駒の数え上げメソッド
	public int countCell(int color) {
		int count = 0;
		for (int i=0; i<BOARD_LENGTH; i++) {
			for (int j=0; j<BOARD_LENGTH; j++) {
				if (this.getCell(i, j) == color) count++;
			}
		}
		return count;
	}
	
	// 勝敗判定
	public int jadge() {
		for (int i=0; i<BOARD_LENGTH; i++) {
			for (int j=0; j<BOARD_LENGTH; j++) {
				if (this.getCell(i, j) == BLANK) return 0;
			}
		}
		if (countCell(BLACK) < countCell(WHITE)) {
			return 1;
		} else if (countCell(WHITE) < countCell(BLACK)) {
			return 2;
		} else {
			return 3;
		}
	}
}
